{% extends 'base.html.twig' %}

{% block content %}
    <h1>Wydawnictwo</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ publisher.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ publisher.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('publisher_index') }}">Powróć do listy</a>
        </li>
        <li>
            <a href="{{ path('publisher_edit', { 'id': publisher.id }) }}">Edytuj</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Usuń">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
