{% extends 'base.html.twig' %}

{% block content %}
    <h1>Autor</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ author.id }}</td>
            </tr>
            <tr>
                <th>Imię</th>
                <td>{{ author.firstName }}</td>
            </tr>
            <tr>
                <th>Nazwisko</th>
                <td>{{ author.lastName }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('author_index') }}">Powróć do listy</a>
        </li>
        <li>
            <a href="{{ path('author_edit', { 'id': author.id }) }}">Edytuj</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Usuń">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
