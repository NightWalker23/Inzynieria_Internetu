{% extends 'base.html.twig' %}

{% block content %}
    <h1>Lista autorów</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Imię</th>
                <th>Nazwisko</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
        {% for author in authors %}
            <tr>
                <td><a href="{{ path('author_show', { 'id': author.id }) }}">{{ author.id }}</a></td>
                <td>{{ author.firstName }}</td>
                <td>{{ author.lastName }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('author_show', { 'id': author.id }) }}">Pokaż</a>
                        </li>
                        <li>
                            <a href="{{ path('author_edit', { 'id': author.id }) }}">Edytuj</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('author_new') }}">Dodaj nowego autora</a>
        </li>
    </ul>
{% endblock %}
